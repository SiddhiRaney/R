# 1. Hello World
print("Hello World")

# 2. Add two numbers
a <- 10
b <- 20
sum <- a + b
print(sum)

# 3. Square of a number
num <- 7
square <- num^2
print(square)

# 4. Check even or odd
num <- 11
if(num %% 2 == 0){
  print("Even")
} else {
  print("Odd")
}

# 5. User input
# (Run only in console, not inside script editors)
