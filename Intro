# 25. Bar plot
values <- c(5, 10, 15)
names(values) <- c("A", "B", "C")
barplot(values, col="pink")

# 26. Histogram
set.seed(10)
random_nums <- rnorm(100)
hist(random_nums, main="Histogram", xlab="Values")

# 27. Boxplot
boxplot(random_nums, main="Boxplot of Random Values")

# 28. Function to find factorial
fact_fun <- function(n){
  if(n == 0) return(1)
  prod <- 1
  for(i in 1:n){
    prod <- prod * i
  }
  return(prod)
}
print(fact_fun(5))

# 29. String operations
str <- "Hello R Programming"
print(nchar(str))          # number of characters
print(toupper(str))        # uppercase
print(tolower(str))        # lowercase

# 30. Data frame summary
df2 <- data.frame(
  Marks = c(88, 92, 76, 81, 95),
  Subject = c("Math", "CS", "Physics", "Chem", "Bio")
)
print(summary(df2))

