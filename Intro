# 6. Create a vector
v <- c(1, 2, 3, 4, 5)
print(v)

# 7. Mean of vector
v <- c(10, 20, 30, 40)
print(mean(v))

# 8. Sum of numbers in vector
v <- c(5, 10, 15)
print(sum(v))

# 9. Simple for loop
for(i in 1:5){
  print(i)
}

# 10. Function to add two numbers
add_numbers <- function(a, b){
  return(a + b)
}
print(add_numbers(5, 8))

# 11. Create a data frame
df <- data.frame(
  Name = c("A", "B", "C"),
  Age = c(20, 21, 22)
)
print(df)

# 12. Simple plot
x <- c(1, 2, 3, 4)
y <- c(3, 6, 9, 12)
plot(x, y, type = "l")   # line plot

# 13. While loop
count <- 1
while(count <= 5){
  print(count)
  count <- count + 1
}

# 14. Repeat loop with break
num <- 1
repeat {
  print(num)
  num <- num + 1
  if(num > 5){
    break
  }
}

# 15. Sequence generation
seq_vec <- seq(1, 10, by = 2)
print(seq_vec)

# 16. Sorting a vector
v <- c(5, 2, 9, 1, 4)
print(sort(v))

# 17. Maximum and minimum of vector
nums <- c(10, 25, 3, 45, 2)
print(max(nums))
print(min(nums))

# 18. Factor creation
colors <- factor(c("Red", "Blue", "Red", "Green"))
print(colors)

# 19. Matrix creation
mat <- matrix(1:9, nrow = 3, ncol = 3)
print(mat)

# 20. Access matrix element
print(mat[2, 3])   # row 2, column 3

# 21. List creation
my_list <- list(Name="Siddhi", Age=23, Scores=c(90, 85, 88))
print(my_list)

# 22. Add new element to list
my_list$City <- "Goa"
print(my_list)

